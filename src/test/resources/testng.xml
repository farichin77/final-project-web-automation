<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Suite" parallel="tests" thread-count="3" group-by-instances="true">

    <listeners>
        <listener class-name="core.ExtentTestListener"/>
    </listeners>

    <test name="Chrome Test" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeTest"/>
            <class name="tests.training.TrainingTest"/>
            <class name="tests.training.ChapterTest"/>
            <class name="tests.training.ContentTest"/>
            <class name="tests.AllDeleteTest"/>
        </classes>
    </test>

    <test name="Firefox Test" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeTest"/>
            <class name="tests.training.TrainingTest"/>
            <class name="tests.training.ChapterTest"/>
            <class name="tests.training.ContentTest"/>
            <class name="tests.AllDeleteTest"/>
        </classes>
    </test>

    <test name="Edge Test" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeTest"/>
            <class name="tests.training.TrainingTest"/>
            <class name="tests.training.ChapterTest"/>
            <class name="tests.training.ContentTest"/>
            <class name="tests.AllDeleteTest"/>
        </classes>
    </test>

</suite>