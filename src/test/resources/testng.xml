<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Suite">

    <listeners>
        <listener class-name="core.ExtentTestListener"/>
        <listener class-name="core.RetryTransformer"/>
    </listeners>

    <test name="Chrome - Web Automation" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeTest"/>
            <class name="tests.training.TrainingTest"/>
            <class name="tests.training.ChapterTest"/>
            <class name="tests.training.ContentTest"/>
            <class name="tests.training.AssignedEmployeeTest"/>
            <class name="tests.CleanupTest"/>
        </classes>
    </test>

    <test name="Edge - Web Automation" preserve-order="true">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeTest"/>
            <class name="tests.training.TrainingTest"/>
            <class name="tests.training.ChapterTest"/>
            <class name="tests.training.ContentTest"/>
            <class name="tests.training.AssignedEmployeeTest"/>
            <class name="tests.CleanupTest"/>
        </classes>
    </test>

    <test name="Firefox - Web Automation" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeTest"/>
            <class name="tests.training.TrainingTest"/>
            <class name="tests.training.ChapterTest"/>
            <class name="tests.training.ContentTest"/>
            <class name="tests.training.AssignedEmployeeTest"/>
            <class name="tests.CleanupTest"/>
        </classes>
    </test>

</suite>
