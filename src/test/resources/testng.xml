<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross Browser Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="base.ExtentTestListener"/>
    </listeners>

    <test name="Chrome Test">
       <parameter name="browser" value="chrome"/>
            <classes>
                <class name="tests.login.LoginTest"/>
                <class name="tests.employee.DivisionTest"/>
                <class name="tests.employee.EmployeeListTest"/>
                <class name="tests.training.TrainingTest"/>
            </classes>
        </test>

    <test name="Firefox Test">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeListTest"/>
            <class name="tests.training.TrainingTest"/>
        </classes>
    </test>

    <test name="Edge Test">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.login.LoginTest"/>
            <class name="tests.employee.DivisionTest"/>
            <class name="tests.employee.EmployeeListTest"/>
            <class name="tests.training.TrainingTest"/>
        </classes>
    </test>
</suite>
